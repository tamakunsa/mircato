<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_internal_transfer_tree" model="ir.ui.view">
        <field name="name">stock.internal.transfer.tree</field>
        <field name="model">stock.internal.transfer</field>
        <field name="arch" type="xml">
            <tree string="Stock Internal Transfer">
                <field name="name" select="1"/>
                <field name="date" select="1"/>
                <field name="source_warehouse_id" select="1"/>
                <field name="dest_warehouse_id" select="1"/>
                <field name="backorder_id" select="1"/>
                <field name="state" select="1"/>
            </tree>
        </field>
    </record>

    <record id="stock_internal_transfer_form" model="ir.ui.view">
        <field name="name">stock.internal.transfer.form</field>
        <field name="model">stock.internal.transfer</field>
        <field name="arch" type="xml">
            <form string="Stock Internal Transfer">
                <header>
                    <button name="action_cancel" type="object" invisible="state not in ('draft', 'send')"
                            class="oe_highlight"
                            string="Cancel"/>
                    <button name="action_draft" type="object" invisible="1" class="oe_highlight" string="Set to Draft"/>
                    <button name="do_enter_wizard" type="object" invisible="state != 'draft'" class="oe_highlight"
                            string="Send"/>
                    <button name="do_enter_wizard" type="object" invisible="state != 'send'" class="oe_highlight"
                            string="Receive"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" required="1" placeholder="Reference" readonly="state != 'draft'"/>
                    </h1>
                    <group>
                        <field name="date" required="1" readonly="state != 'draft'"/>
                    </group>
                    <group col="4">
                        <field name="source_warehouse_id" required="1" readonly="state != 'draft'"/>
                        <field name="dest_warehouse_id" required="1" readonly="state != 'draft'"/>
                    </group>
                    <group>
                        <field name="backorder_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Product">
                            <field name="line_ids" nolabel="1" readonly="state != 'draft'">
                                <tree editable="bottom">
                                    <field name="product_id" domain="[('type', '!=', 'service')]" required="1"/>
                                    <field name="product_qty" required="1"/>
                                    <field name="product_uom_id" groups="uom.group_uom" required="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Pickings">
                            <field name="picking_ids" nolabel="1" readonly="state != 'draft'"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter" colspan="4">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_stock_internal_transfer" model="ir.actions.act_window">
        <field name="name">Stock Internal Transfer</field>
        <field name="res_model">stock.internal.transfer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_stock_internal_transfer" id="menu_stock_internal_transfer"
              parent="stock.menu_stock_warehouse_mgmt" sequence="1"/>
</odoo>