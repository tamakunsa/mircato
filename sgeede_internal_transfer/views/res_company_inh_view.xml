<odoo>
    <data>
        <record id="res_company_inherited_form_view" model="ir.ui.view">
            <field name="name">res.company.view.form.inherited</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='social_media']" position="before">
                    <group>
                        <field name="transit_location_id"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>