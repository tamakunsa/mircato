<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_price_barcode_tree">
            <field name="name">price.code.tree</field>
            <field name="model">price.code</field>
            <field name="arch" type="xml">
                <tree string="Price Barcodes" editable="top">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_price_barcode">
            <field name="name">Price Barcodes</field>
            <field name="res_model">price.code</field>
            <field name="view_mode">tree</field>
            <field name="type">ir.actions.act_window</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a Price Barcodes
                </p>
            </field>
        </record>

        <menuitem id="price_barcode_root"
                  name="Price Code"
                  parent="stock.menu_product_in_config_stock"
                  action="action_price_barcode"
                  sequence="14"/>

    </data>
</odoo>
