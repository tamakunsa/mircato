<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_product_template_form_inherited">
            <field name="name">product.template.form.inherited</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="generate_barcode" string="Generate Barcode" type="object" class="oe_highlight"
                            invisible="status != 'draft'"/>
                </xpath>
                <xpath expr="//field[@name='detailed_type']" position="after">
                    <!-- <field name="barcode_type" widget="selection" string="Barcode Type"/> -->
                    <field name="type_id"/>
                                               <field name="vendor_id"/>
                    <field name="kind_id"/>
                    <field name="price_id"/>
                    <field name="status" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
