<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_kind_barcode_tree">
            <field name="name">kind.code.tree</field>
            <field name="model">kind.code</field>
            <field name="arch" type="xml">
                <tree string="kind Barcodes" editable="top">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_kind_barcode">
            <field name="name">Kind Barcodes</field>
            <field name="res_model">kind.code</field>
            <field name="view_mode">tree</field>
            <field name="type">ir.actions.act_window</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a kind Barcodes
                </p>
            </field>
        </record>

        <menuitem id="kind_barcode_root"
                name="kind Code"
                parent="stock.menu_product_in_config_stock"
                action="action_kind_barcode"
                sequence="13"/>
    </data>
</odoo>
